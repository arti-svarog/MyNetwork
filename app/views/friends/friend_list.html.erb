<div id="page-contents">
	<div class="container">
		<div class="row">
		  <%= render partial: '/home/common/navbar' %>
			<div class="col-md-7">
        <%= render partial: '/home/common/publish_post' %>
        <div class="friend-list">
        	<div class="row">
            <% @friends.each do |user| %>
          		<div class="col-md-6 col-sm-6">
                <div class="friend-card">
                	<img src="http://placehold.it/1030x360" alt="profile-cover" class="img-responsive cover" />
                	<div class="card-info">
                    <img src="http://placehold.it/300x300" alt="user" class="profile-photo-lg" />
                    <div class="friend-info">
                      <a href="#" class="pull-right text-green">My Friend</a>
                    	<h5><a href="timeline.html" class="profile-link"><%= user.firstname %>  <%= user.lastname %></a></h5>
                    	<p>Student at Harvard</p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        	</div>
        </div>
      </div>
			<%= render partial: 'home/common/follow_friends' %>
		</div>
	</div>
</div>